# 1. Forza la modalità non interattiva
export DEBIAN_FRONTEND=noninteractive

# 2. Ripara eventuali pacchetti interrotti o blocchi precedenti
sudo dpkg --configure -a

# 3. Rimuovi i pacchetti specificati senza chiedere conferma
# Ho incluso i pacchetti che apparivano nei tuoi log
sudo apt-get purge -y \
  clang-13 clang-14 clang-15 \
  clang-tidy-13 clang-tidy-14 clang-tidy-15 \
  llvm-13 llvm-14 llvm-15 \
  llvm-13-dev llvm-14-dev llvm-15-dev

# 4. Pulisci tutto ciò che è rimasto inutilizzato
sudo apt-get autoremove -y
sudo apt-get clean
